<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Jednostka dla bazy danych WebAppDatabase -->
    <persistence-unit name="webappdatabase-unit">
        <class>org.example.entity.Client</class>
        <class>org.example.entity.Product</class>
        <class>org.example.entity.Category</class>
        <class>org.example.entity.Manufacturer</class>
        <class>org.example.entity.Sale</class>
        <class>org.example.entity.Opinion</class>
        <class>org.example.entity.OrderedProduct</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/WebAppDatabase?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

    <!-- Jednostka dla bazy danych ObjectRelationalDB -->
    <persistence-unit name="objectrelationaldb-unit">
        <class>org.example.orm.ClientORM</class>
        <class>org.example.orm.ProductORM</class>
        <class>org.example.orm.CategoryORM</class>
        <class>org.example.orm.ManufacturerORM</class>
        <class>org.example.orm.SaleORM</class>
        <class>org.example.orm.OpinionORM</class>
        <class>org.example.orm.OrderedProductORM</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ObjectRelationalDB?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
